#question 5

def factoriser(n):
    l=[]
    L=[]
    k=2
    while k<=n:
        y=True
        for i in range(2,int(k**0.5)+1):
            if k%i==0:
                y = False
                break
        if y==True :
            l.append(k)
        k+=1
    for i in range(len(l)):
        k=n
        while k%l[i]==0:
            L.append(l[i])
            k=k/l[i]
    return(L)

#question 6

def factoriser2(n):
    L=[]
    l=[2,3]
    for i in range(2,int(n**0.5)):
        y=True
        for s in range(len(l)):
            if (2*i+1)%l[s]==0:
                y=False
                break
        if y==True:
            l.append(2*i+1)
    for i in range(len(l)):
        k=n
        while k%l[i]==0:
            L.append(l[i])
            k=k/l[i]
    return(L,len(L))

#question 7

def calculerAlpha(n):
    L=[]
    NB=[]
    l=[2,3]
    for i in range(2,int(n**0.5)):
        y=True
        for s in range(len(l)):
            if (2*i+1)%l[s]==0:
                y=False
                break
        if y==True:
            l.append(2*i+1)
    for i in range(len(l)):
        k=n
        nb=0
        if k%l[i]==0:
            while k%l[i]==0:
                L.append(l[i])
                k=k/l[i]
                nb+=1
            NB.append(nb)
    return(NB, len(NB))

