import numpy as np
## exercice 1

#question 1

def estPremier(n):
    y=True
    for i in range(2,n):
        if n%i==0:
            y=False
            break
    return(y)

#question 2

def petitsPremier(n):
    l=[]
    k=2
    while k<=n:
        y=True
        for i in range(2,k):
            if k%i==0:
                y=False
                break
        if y==True :
            l.append(k)
        k+=1
    return(l, len(l))

#question 3

def petitsPremier2(n):
    l=[]
    k=2
    while k<=n:
        y=True
        for i in range(2,int(k**0.5)+1):
            if k%i==0:
                y = False
                break
        if y==True :
            l.append(k)
        k+=1
    return(l)

