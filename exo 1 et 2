import numpy as np
## exercice 1
#Question1
def estPremier(n):            #Création d'une fonction  
    y=True                    #initialisation d'une variable à "True"
    for k in range(2,n):      #Avec cette boucle, on fait varier un entier k entre 2 et n-1:
        if n%k==0 and n%1==0: #Si k divise n et que k est divisible par 1, celui-ci n'est pas premier et la variable y prend la valeur "False" et la boucle est arrêtée
            y=False
            break
    return(y)                 #Ce programme indique à l'utilisateur si le nombre qu'il a rentré est premier ou non

#Question 2

def petitsPremiers(n):          
    L=[]                             #Création d'une liste vide
    for k in range(2,n+1):           #Avec cette boucle, on fait varier un entier k entre 2 et n:
        if estPremier(k)==True:      #On teste pour chaque valeur de k si il est premier ou non: si il est premier, on l'ajoute à la liste L
            L.append(k)
    return(L,len(L))                 #Ce programme renvoie donc la liste des nombres premiers compris entre 2 et le nombre entré par l'utilisateur

#Question 3

#Cette fonction renvoie pour un entier n rentré par l'utilisateur, la liste des nombres premiers compris entre 3 et n dans l'ordre croissant et leur nombre
#Paramètre d'entrée: n - l'entier rentré par l'utilisateur
#Paramètre de sortie: l - liste des nombres premiers compris entre 3 et n 
#                     et len(l): longueur de la liste l c'est à dire le nombre d'éléments de la liste


def petitsPremiers2(n):                     
    l=[]
    for k in range(3,n):        #On teste pour chaque entier compris entre 2 et n si il est premier         
        y=True
        for i in range(3,int(k**0.5)+1):    #On teste si il est premier en appliquant la fonction estPremier mais plus efficace
            if k%i==0:
                y = False
                break
        if y==True :
            l.append(k)
    return(l,len(l))

#question 4

def petitsPremiers3(n):
    l = []
    for i in range(2,n+1):
        if len(l) == 0:
            l.append(i)
        else:
            t = True
            for k in l:
                if i % k == 0:
                    t = False
            if t == True:
                l.append(i)
    return l


#question 5

def factoriser(n):
    l=[]
    L=[]
    k=2
    while k<=n:
        y=True
        for i in range(2,int(k**0.5)+1):
            if k%i==0:
                y = False
                break
        if y==True :
            l.append(k)
        k+=1
    for i in range(len(l)):
        k=n
        while k%l[i]==0:
            L.append(l[i])
            k=k/l[i]
    return(L)

#question 6

def factoriser2(n):
    L=[]
    l=[2,3]
    for i in range(2,int(n**0.5)):
        y=True
        for s in range(len(l)):
            if (2*i+1)%l[s]==0:
                y=False
                break
        if y==True:
            l.append(2*i+1)
    for i in range(len(l)):
        k=n
        while k%l[i]==0:
            L.append(l[i])
            k=k/l[i]
    return(L,len(L))

#question 7

def calculerAlpha(n):
    L=[]
    NB=[]
    l=[2,3]
    for i in range(2,int(n**0.5)):
        y=True
        for s in range(len(l)):
            if (2*i+1)%l[s]==0:
                y=False
                break
        if y==True:
            l.append(2*i+1)
    for i in range(len(l)):
        k=n
        nb=0
        if k%l[i]==0:
            while k%l[i]==0:
                L.append(l[i])
                k=k/l[i]
                nb+=1
            NB.append(nb)
    return(NB, len(NB))

#question 8:
def estPuissance(n,b): #n>=2, b>=1
    a = 0
    for k in range (n+1):
        if n==a**b:
            print(a)
            return True
        a+=1
    return False


##exercice 2:

#question 9:

def pointsToVect(A,B):
    return(np.array([B[0]-A[0],B[1]-A[1]]))
#question 10:
def prodScal(u,v):
    return(np.dot(u,v))
#question 11:
def norme(a):
    return(np.linalg.norm(a))
#question 12:
def pente(a):
    return(a[1]/a[0])
#question 13:
def longueurs(l):
    L=[]
    for k in range(0,len(l)-1):
        L.append(norme(pointsToVect(l[k],l[k+1])))
    L.append(norme(pointsToVect(l[0],l[-1])))
    return(L)
#question 14:
def trianglesSembalbles(A,B):
    l=longueurs(A)
    L=longueurs(B)
    for i in range(3):
        if l[i]!=L[i]:
            return(False)
    return(True)
#question 15:
def estPermutation(L,M):
    for i in range(len(L)):
        if L[i]!=M[-i-1]:
            return(False)
    return(True)
#question 16:
def memesTriangles(A,B):
    if estPermutation(A,B)==True and trianglesSembalbles(A,B)==True:
        return(True)
    else:
        return(False)
